{
  "name": "monero-javascript",
  "description": "A JavaScript library for using Monero",
  "version": "0.7.4",
  "license": "MIT",
  "repository": "https://github.com/monero-ecosystem/monero-javascript",
  "private": false,
  "main": "index.js",
  "scripts": {
    "start": "todo",
    "build_web_worker": "webpack --config ./webpack.worker.js",
    "build_web_tests": "webpack --config ./webpack.tests.js",
    "test": "node --experimental-wasm-threads node_modules/mocha/bin/_mocha 'dist/commonjs/src/test/TestAll' --timeout 900000000 --exit",
    "jsdoc": "jsdoc -r -c ./configs/jsdoc_config.js -d ./docs",
    "build_commonjs": "rm -rf ./dist/commonjs && mkdir ./dist/commonjs && babel ./src --out-dir ./dist/commonjs/src && babel ./src/test/TestSampleCode.ts --extensions '.ts' --out-dir ./dist/commonjs/src/test --extensions ts && babel ./index.js --out-dir ./dist/commonjs && mkdir -p dist/commonjs/dist && cp dist/*.js dist/commonjs/dist && cp dist/*.js.map dist/commonjs/dist && cp dist/*.wasm dist/commonjs/dist",
    "emit_typedefs_linux": "./bin/emit_typedefs_linux.sh",
    "emit_typedefs_mac": "./bin/emit_typedefs_mac.sh",
    "check_babel_version": "babel -V"
  },
  "types": "types/index.d.ts",
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "woodser",
        "repo": "monero-javascript"
      }
    ]
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "dependencies": {
    "ajv": "^6.12.6",
    "async": "2.6.4",
    "crypto-js": "^4.0.0",
    "html5-fs": "0.1.1",
    "net": "^1.0.2",
    "promise-throttle": "^1.1.2",
    "request": "^2.88.0",
    "request-promise": "^4.2.6",
    "serialize-javascript": "^3.1.0",
    "text-encoding": "^0.7.0",
    "tls": "0.0.1",
    "ts-loader": "^9.3.0",
    "uuid": "3.3.2",
    "web-worker": "^1.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.15.0",
    "@babel/node": "^7.18.10",
    "@babel/plugin-transform-runtime": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.18.6",
    "@types/mocha": "^9.1.1",
    "assert": "^2.0.0",
    "babel-loader": "8.0.2",
    "browserify-zlib": "^0.2.0",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.0",
    "eslint": "^8.0.1",
    "https-browserify": "^1.0.0",
    "jsdoc": "^3.6.7",
    "memfs": "^3.2.0",
    "minimist": "^1.2.5",
    "mocha": "^9.1.3",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "querystring-es3": "^0.2.1",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "typescript": "^4.8.3",
    "url": "^0.11.0",
    "util": "^0.12.4",
    "webpack": "^5.50.0",
    "webpack-cli": "^4.8.0",
    "webpack-merge": "4.1.4",
    "worker-loader": "2.0.0",
    "yargs-parser": "^18.1.3"
  }
}
